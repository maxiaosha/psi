<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.psi.dao.GoodsStockDao">
	<resultMap type="GoodsStock" id="GoodsStockResult">
		<result property="id" column="ID" />
		<result property="sn" column="SN" />
		<result property="productionDate" column="PRODUCTION_DATE" />
		<result property="num" column="NUM" />

		<association property="goods" column="GOODS_ID" select="com.psi.dao.GoodsDao.getById"></association>
		<association property="replenishB" column="REPLENISH_B_ID" select="com.psi.dao.ReplenishBDao.getById"></association>
	</resultMap>
	
	<sql id="Base_Column_List" >
		ID, SN, PRODUCTION_DATE, NUM, GOODS_ID, REPLENISH_B_ID
	</sql>
	
	<select id="getById" resultMap="GoodsStockResult">
		select <include refid="Base_Column_List" /> from goods_stock where ID = #{id}
	</select>
	
	<select id="getBySn" resultMap="GoodsStockResult">
		select <include refid="Base_Column_List" /> from goods_stock where Sn = #{sn} and NUM > '0'
	</select>
	
	<insert id="insert">
		insert into goods_stock(<include refid="Base_Column_List" />)
		 values(#{id}, #{sn}, #{productionDate}, #{num}, #{goods.id}, #{replenishB.id})
	</insert>
	
	<delete id="delete">
		delete from goods_stock where ID = #{id}
	</delete>
	
	<update id="modify" parameterType="GoodsStock">
		update goods_stock
		<set>
			<if test="num != null and num != ''">
				NUM = #{num},
			</if>
		</set>
		where ID = #{id}
	</update>
	  
	<select id="queryList" resultMap="GoodsStockResult">
		select <include refid="Base_Column_List" />
		from goods_stock 
		<where>
			<if test="goodsId != null and goodsId !=''">
				and GOODS_ID = #{goodsId}
			</if>
				and NUM > '0'
		</where>
		<if test="start != null and size != null">
			limit #{start},#{size}
		</if>
	</select>
	
	<select id="getTotal" resultType="Long">
		select count(*) from goods_stock
		<where>
			<if test="goodsId != null and goodsId !=''">
				and GOODS_ID = #{goodsId}
			</if>
		</where>
	</select>
		
</mapper> 
